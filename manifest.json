{
  "manifest_version": 2,

  "name": "AudioVisualizer Drop-Down",
  "description": "dropDoWNVISUALIZER",
  "version": "1.0",

 "permissions": [
    "tabCapture",
    "activeTab",
	"tabs",
	"http://*/",
	"https://*/"
  ],
  "browser_action": {
    "default_icon": "gfx/icon.png",
    "default_title": "dropDownAudio"
  },
  "background": {
    "scripts": [
				"backgroundScripts/extensionFrontEnd.js",
				"backgroundScripts/main.js"
				],
    "persistent": false
  }
}
