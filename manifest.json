{
	"manifest_version": 2,
	"name": "AudioVisualizer",
	"description": "put on some music and turn your browsing session into a party.(by pressing the icon or hotkey)",
	"version": "2.1",
	"permissions": [
		"tabCapture",
		"tabs",
		"activeTab",
		"http://*/",
		"https://*/"
	],
	"browser_action": {
		"default_icon": "gfx/icon.png",
		"default_title": "AudioVisualizer"
	},
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Q"
			}
		}	
	},
	"background": {
		"scripts": [
			"settings/setting.js",
			"backgroundScripts/extensionFrontEnd.js",
			"backgroundScripts/main.js",
			"scriptsToInject.js"
		],
		"persistent": false
	}
}
